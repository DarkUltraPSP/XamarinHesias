<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD.Views.MainPage">

    <StackLayout>
        <ListView x:Name="ContactsListView" ItemSelected="ContactsListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding PhoneNumber}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
            <Entry Placeholder="Name" x:Name="NameEntry" />
            <Entry Placeholder="Phone Number" x:Name="PhoneNumberEntry" />
        </StackLayout>

        <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
            <Button Text="Add" Clicked="AddButton_Clicked" />
            <Button Text="Update" Clicked="UpdateButton_Clicked" />
            <Button Text="Delete" Clicked="DeleteButton_Clicked" />
        </StackLayout>
    </StackLayout>

</ContentPage>
