<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD.Views.EditContact">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Lname"/>
            <Entry x:Name="LNameEntry" Placeholder="Enter Last Name" />

            <Label Text="FName" />
            <Entry x:Name="FNameEntry" Placeholder="Enter First Name" />

            <Label Text="Phone Number" />
            <Entry x:Name="PhoneNumberEntry" Placeholder="Enter Phone Number" Keyboard="Numeric" MaxLength="10"/>

            <Label Text="Email" />
            <Entry x:Name="EmailEntry" Placeholder="Enter Email" />

            <Label Text="Comment" />
            <Entry x:Name="CommentEntry" Placeholder="Enter Comment" />

            <Button Text="Update Contact" Clicked="OnUpdateContactClicked" />
        </StackLayout>

    </ContentPage.Content>
</ContentPage>